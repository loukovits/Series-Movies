{% extends 'templates/app.twig'%}

{% block content %}

    <div class="row">


        <div class="col-md-12">
            {% for series in allSeries  %}

                <article>

                    <h2><a href="#">{{ series.name }}</a></h2>
                    <p class="lead"><i class="fa fa-user"></i> by <a href="">{{  users[post.id][0].name }} </a>
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <span class="glyphicon glyphicon-folder-open"></span> &nbsp;<a href="#">tags: </a>
                            &nbsp;&nbsp;<span class="glyphicon glyphicon-bookmark"></span>
                            {% for tag in series.tags %}

                                <a href="#">{{ tag.value }}</a>
                            {% endfor %}
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <span class="glyphicon glyphicon-pencil"></span> <a href="">comments</a>
                            &nbsp;&nbsp;<span class="glyphicon glyphicon-time"></span> {{ series.created_at }}
                            {% if auth.check %}
                                <a href="#" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-leaf"></span> Edit Show</a>
                            {% endif %}
                        </div>
                    </div>


                    <hr>



                    <br />
                    {{ series.description|length > 50 ? series.description|striptags|slice(0, 3000) | raw   : series.description |raw }}
                    {{ series.description|length > 50 ? '...' : '' }}

                    <p class="text-right">
                        <a href="#">
                            continue reading...
                        </a>
                    </p>


                    <hr>
                </article>
            {% endfor %}
        </div>

    </div>

{% endblock %}